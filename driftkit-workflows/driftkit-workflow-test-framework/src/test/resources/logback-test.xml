<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} -- %msg%n</pattern>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
    
    <!-- Enable debug logging for test framework -->
    <logger name="ai.driftkit.workflow.test" level="DEBUG" />
    <logger name="ai.driftkit.workflow.engine" level="INFO" />
</configuration>